pipeline {
    agent any
tools{
        maven 'Maven'
    }
stages
	{
	stage("Build")
	{
	steps{
		echo "building the project......."
script{
	bat "mvn clean package"
	}
	      }
	}

	stage("Test")
	{
	steps{
		echo "testing the project......."
script{
	bat "mvn clean test -DsuiteXmlFile=C:\Users\mamma\IdeaProjects\ApiTestNG2023Aug\suite.xml"
	}
	}}
   }
}
