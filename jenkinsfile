pipeline {
    agent any
    tools {
        maven 'Maven'
    }

 stages {

 stage("SCM Checkout"){
            steps{
            git 'https://github.com/samben01/KarateWithJenkins.git'
            }
            }
 stage("Build") {
            steps {
                echo "Building the project..."
                script {
                    bat "mvn clean package"
                }
            }
        }

stage("Test") {
            steps {
                echo "Testing the project..."
                script {
                    def suiteXmlFile = "suite.xml" // Default to smoke test

                    bat "mvn clean test -DsuiteXmlFile=${suiteXmlFile}"
                }
            }
        }
    }
 
}
