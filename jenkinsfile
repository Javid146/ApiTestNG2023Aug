pipeline {
    agent any
tools{
        maven 'Maven'
    }
stages
	{
	stage("Build")
	{
	steps{
		echo "building the project......."
script{
	bat 'mvn clean package'
	}
	      }
	}

	stage("Test")
	{
	steps{
		echo "testing the project......."
script{
	bat 'mvn clean test -DsuiteXmlFile=suite.xml'
	}
	}}
   }
}
