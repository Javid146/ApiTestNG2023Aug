pipeline {
    agent any

parameters {
         choice(name: 'TESTNG_XML', choices: ['testng.xml', 'suite.xml'])
}
stages
	{
	stage("Build")
	{
	steps{
		echo "building the project......."
	      }
	}

	stage("Test")
	{
	steps{
		echo "testing the project......."
		script{
		        sh mvn clean install
		}
	}
	}

	stage("Deploy")
	{
	steps{
		echo "deploying the project......."
	}
	}
   }
}