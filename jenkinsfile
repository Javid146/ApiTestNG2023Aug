pipeline {
    agent any
    tools {
        maven 'Maven'
    }

 stages {

 stage("Build") {
            steps {
                echo "Building the project..."
                script {
                    bat "mvn clean package"
                }
            }
        }

stage("Test") {
            steps {
                echo "Testing the project..."
                script {
                    def suiteXmlFile = "suite.xml" // Default to smoke test

                    bat "mvn clean test -DsuiteXmlFile=${suiteXmlFile}"
                }
            }
        }
    }
 
}
