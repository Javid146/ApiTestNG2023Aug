pipeline {
    agent any

    parameters {
        choice(name: 'TEST_TYPE', choices: ['Smoke', 'Regression'], description: 'Choose test type to run')
    }

    stages {
        stage("Build") {
            steps {
                echo "Building the project..."
               
            }
        }

        stage("Test") {
            steps {
                echo "Testing the project..."
                script {
                    def XmlFile // Default to smoke test

                    if (params.TEST_TYPE == 'Regression') {
                        XmlFile = "testng.xml"
                    }
                  if (params.TEST_TYPE == 'Smoke') {
                        XmlFile = "suite.xml"
                    }

                    bat 'mvn clean test -DsuiteXmlFile=${XmlFile}'
                }
            }
        }
    }

    post {
        failure {
          mail bcc: '', body: '', cc: '', from: '', replyTo: '', subject: '${env.JOB_NAME} - Build # ${env.BUILD_NUMBER} - Failure', to: 'mamadli.javid@gmail.com, mammadli.javid15@gmail.com'
        }
        success {
        mail bcc: '', body: '', cc: '', from: '', replyTo: '', subject: '${env.JOB_NAME} - Build # ${env.BUILD_NUMBER} - Success', to: 'mamadli.javid@gmail.com, mammadli.javid15@gmail.com'
            emailext body: "Success, see CONSOLE",
            attachLog: true,
            subject: "${env.JOB_NAME} - Build # ${env.BUILD_NUMBER} - Successful",
            to: "mammadli.javid15@gmail.com"
        }
    }
}
