pipeline {
    agent any
    tools {
        maven 'Maven'
    }

    stages {
        stage("Build") {
            steps {
                echo "Building the project..."
                script {
                    sh 'mvn clean package'
                }
            }
        }

        stage("Test") {
            steps {
                echo "Testing the project..."
                script {
                    def suiteXmlFile = "suite.xml" // Default to smoke test

                    sh 'mvn clean test -DsuiteXmlFile=${suiteXmlFile}'
                }
            }
        }
    }
 
}
